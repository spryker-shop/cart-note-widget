{% extends template('widget') %}

{% define data = {
    form: _widget.cartNoteForm,
    formAction: url('cart-note/item')
} %}

{% block body %}

    {% embed molecule('form') with {
        data: {
            options: {
                action: data.formAction
            },
            form: data.form,
            submit: {
                enable: true,
                text: 'cart_note.form.save' | trans
            }
        }
    } only %}
        {% block title %}
            {{ 'cart_note.item_form.enter_note' | trans }}
        {% endblock %}
    {% endembed %}
{% endblock %}
