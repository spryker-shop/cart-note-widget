{% extends template('widget') %}

{% define data = {
    order: _widget.order
} %}

{% block body %}
    {% if data.order.cartNote is not null %}
        <div class="box">
            <div class="columns text-left">
                <small>{{ 'cart_note.customer_page.order_note' | trans }}:</small>
                <br>
                <span>{{ data.order.cartNote | escape | nl2br }}</span>
            </div>
        </div>
    {% endif %}
{% endblock %}
